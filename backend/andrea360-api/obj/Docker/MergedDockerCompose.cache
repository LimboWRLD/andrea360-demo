name: dockercompose1658041618570158884
services:
  keycloak:
    command:
      - start-dev
      - --import-realm
    container_name: keycloak
    depends_on:
      keycloak_postgres:
        condition: service_started
        required: true
    environment:
      KC_DB: postgres
      KC_DB_PASSWORD: password
      KC_DB_URL_DATABASE: keycloak
      KC_DB_URL_HOST: keycloak_postgres
      KC_DB_URL_PORT: "5432"
      KC_DB_USERNAME: keycloak
      KEYCLOAK_ADMIN: admin
      KEYCLOAK_ADMIN_PASSWORD: admin
    image: quay.io/keycloak/keycloak:latest
    networks:
      andrea360-network: null
    ports:
      - mode: ingress
        target: 8080
        published: "8080"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\namid\Desktop\Andrea360\backend\andrea360-api\keycloak-andrea360.json
        target: /opt/keycloak/data/import/keycloak-andrea360.json
        bind:
          create_host_path: true
  keycloak_postgres:
    container_name: keycloak_postgres
    environment:
      POSTGRES_DB: keycloak
      POSTGRES_PASSWORD: password
      POSTGRES_USER: keycloak
    image: postgres:16
    networks:
      andrea360-network: null
    ports:
      - mode: ingress
        target: 5433
        published: "5437"
        protocol: tcp
    volumes:
      - type: volume
        source: pg_data
        target: /var/lib/postgresql/data
        volume: {}
  postgres:
    environment:
      POSTGRES_DB: andrea360
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres
    networks:
      andrea360-network: null
    ports:
      - mode: ingress
        target: 5432
        published: "5450"
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\namid\Desktop\Andrea360\backend\andrea360-api\infrastructure\db
        target: /docker-entrypoint-initdb.d/db.sql
        bind:
          create_host_path: true
      - type: volume
        source: andrea360-data
        target: /var/lib/postgresql/data
        volume: {}
  restapi:
    build:
      context: C:\Users\namid\Desktop\Andrea360\backend\andrea360-api
      dockerfile: RestAPI/Dockerfile
    depends_on:
      keycloak:
        condition: service_started
        required: true
      postgres:
        condition: service_started
        required: true
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ASPNETCORE_HTTPS_PORTS: "8081"
      ASPNETCORE_URLS: http://+:5000
      ConnectionStrings__DefaultConnection: Host=postgres;Port=5432;Database=andrea360;Username=postgres;Password=postgres;
      Jwt__Audience: account
      Jwt__Authority: http://keycloak:8080/realms/andrea360-realm
      Jwt__ClientId: andrea360-frontend
      Jwt__Issuer: http://localhost:8080/realms/andrea360-realm
      Jwt__MetaDataAddress: http://keycloak:8080/realms/andrea360-realm/.well-known/openid-configuration
      Keycloak__ServerUrl: http://keycloak:8080
    image: restapi
    networks:
      andrea360-network: null
    ports:
      - mode: ingress
        target: 5000
        published: "5000"
        protocol: tcp
      - mode: ingress
        target: 8080
        protocol: tcp
      - mode: ingress
        target: 8081
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\namid\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\namid\AppData\Roaming/Microsoft/UserSecrets
        target: /root/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\namid\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\namid\AppData\Roaming/ASP.NET/Https
        target: /root/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
networks:
  andrea360-network:
    name: dockercompose1658041618570158884_andrea360-network
    driver: bridge
volumes:
  andrea360-data:
    name: dockercompose1658041618570158884_andrea360-data
  pg_data:
    name: dockercompose1658041618570158884_pg_data